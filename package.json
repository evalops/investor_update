{
  "name": "investor-update-cli",
  "version": "1.0.0",
  "description": "CLI tool to generate investor reports from Mercury, Snowflake, Stripe, and GCP",
  "main": "generate-report.ts",
  "type": "module",
  "bin": {
    "investor-update": "./generate-report.ts"
  },
  "scripts": {
    "generate": "bun run generate-report.ts",
    "dev": "bun run --watch generate-report.ts",
    "build": "bun run tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:integration": "bun test tests/integration",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "validate": "bun run validate-setup.ts",
    "collect-data": "bun run collect-data.ts",
    "health": "bun run src/services/healthCheck.ts",
    "chief-of-staff": "bun run ai-chief-of-staff.ts",
    "runway-analysis": "bun run ai-chief-of-staff.ts \"\" ./runway-reports runway-scenarios",
    "docker:build": "docker build -t investor-update .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "prepare": "husky install"
  },
  "dependencies": {
    "@google-cloud/bigquery": "^8.1.1",
    "@openai/agents": "^0.0.15",
    "axios": "^1.11.0",
    "canvas": "^3.1.2",
    "chart.js": "^4.5.0",
    "chartjs-node-canvas": "^5.0.0",
    "crewai": "^1.0.1",
    "date-fns": "^4.1.0",
    "decimal.js": "^10.6.0",
    "dotenv": "^17.2.1",
    "snowflake-sdk": "^2.1.3",
    "stripe": "^18.4.0",
    "zod": "<=3.25.67"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "bun-types": "^1.2.19",
    "eslint": "^8.50.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-promise": "^6.1.0",
    "eslint-plugin-security": "^1.7.0",
    "husky": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "cli",
    "investor",
    "reports",
    "metrics",
    "mercury",
    "snowflake",
    "stripe",
    "gcp"
  ],
  "author": "EvalOps",
  "license": "ISC"
}
