    "date-fns": "^4.1.0",
    "decimal.js": "^10.6.0",
    "snowflake-sdk": "^2.1.3",
    "stripe": "^18.4.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "bun-types": "^1.2.19"
  },
  "keywords": ["cli", "investor", "reports", "metrics", "mercury", "snowflake", "stripe", "gcp"],
