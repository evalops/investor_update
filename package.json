{
  "name": "investor-update-cli",
  "version": "1.0.0",
  "description": "CLI tool to generate investor reports from Mercury, Snowflake, Stripe, and GCP",
  "main": "generate-report.ts",
  "type": "module",
  "bin": {
    "investor-update": "./generate-report.ts"
  },
  "scripts": {
    "generate": "bun run generate-report.ts",
    "dev": "bun run --watch generate-report.ts",
    "build": "echo 'No build step needed with Bun'",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "@google-cloud/bigquery": "^8.1.1",
    "axios": "^1.11.0",
    "canvas": "^3.1.2",
